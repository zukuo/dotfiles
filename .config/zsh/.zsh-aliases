# Suckless Util
alias fullclean="make clean && rm -f config.h && git reset --hard origin/master"
alias fullbuild="make && sudo make clean install"
alias fullslbuild="rm -f config.h && make && sudo make clean install"
alias buildblocks="rm -f blocks.h && make && sudo make clean install"
alias buildflexi="rm -f config.h && rm -f patches.h && make && sudo make clean install"

# Changing Directories
alias ..="cd .."
alias ...="cd .. && cd .."
alias cd..="cd .."
alias cd...="cd .. && cd .."

# Killing Programs
alias restartblocks="killall dwmblocks && dwmblocks &"
alias ka="killall"
alias killx="killall xinit"

# Starting Programs
alias propertree="sudo python $HOME/Git/ProperTree/ProperTree.command"

# Git
alias gb="git branch"
alias gc="git commit"
alias gcd="git checkout"
alias gadd="git add"
alias gapp="git apply"
alias gm="git merge"
alias gr="git rebase"

# Vim
alias vpc="nvim +PlugClean"
alias vpi="nvim +PlugInstall"

# Editing
alias v="nvim"
alias vim="nvim"
alias sv="sudo nvim"
alias eZ="nvim $XDG_CONFIG_HOME/zsh/.zshrc"
alias eA="nvim $XDG_CONFIG_HOME/zsh/.zsh-aliases"
alias Z="source $XDG_CONFIG_HOME/zsh/.zshrc"

# Listing
# alias ls="ls -hN --color=auto --group-directories-first"
# alias l="ls -vla"
# alias l="ls -lah --color=auto --group-directories-first"
alias ls="exa --color=always --group-directories-first" # all files and dirs in long format
alias l="exa -al --color=always --group-directories-first"
alias la="exa -a --color=always --group-directories-first"

alias grep='grep --color=auto'

# Extra
alias pacman="sudo pacman"
alias wifi="nmtui"

alias mount-gdrive="rclone mount googledrive: $HOME/GoogleDrive &"
alias umount-gdrive="fusermount -u $HOME/GoogleDrive"

# Fixing XDG Locations For Programs
alias wget="wget --hsts-file $XDG_DATA_HOME/wget/wget-hsts"
alias svn="svn --config-dir $XDG_CONFIG_HOME/subversion"
alias xbindkeys="xbindkeys -f "$XDG_CONFIG_HOME"/xbindkeys/config"

